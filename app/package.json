  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build": "NODE_ENV=production run-s build:css build:packages build:durable build:remix",
    "build:durable": "pnpm --filter durable-objects build",
    "build:packages": "pnpm --filter rope build",
    "build:css": "tailwindcss -o ./src/tailwind.css --minify",
    "build:remix": "NODE_ENV=production remix build",
    "dev:remix": "NODE_ENV=development remix watch",
    "dev:tailwind": "tailwindcss -o ./src/tailwind.css --watch",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ../public",
    "dev": "tailwindcss -o ./src/tailwind.css && NODE_ENV=development remix build && run-p \"dev:*\"",
    "test": "vitest"
  }
