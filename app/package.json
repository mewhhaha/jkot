    "wrangler": "0.0.24"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build": "NODE_ENV=production run-s build:css build:packages build:durable build:remix",
    "build:durable": "pnpm build --filter durable-objects",
    "build:packages": "pnpm build --filter rope",
    "build:css": "tailwindcss -o ./src/tailwind.css --minify",
    "build:remix": "NODE_ENV=production remix build",
    "dev:remix": "NODE_ENV=development remix watch",
    "dev:tailwind": "tailwindcss -o ./src/tailwind.css --watch",
    "dev:wrangler": "NODE_ENV=development wrangler pages dev ./public --mount api=./durable_objects --do ARTICLE_DO=Article@api --do SETTINGS_DO=Settings@api $(cat .env)",
    "dev": "NODE_ENV=development remix build && tailwindcss -o ./src/tailwind.css && run-p \"dev:*\"",
    "test": "vitest"
  }
}
