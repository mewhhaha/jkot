  "dependencies": {
    "@cloudflare/stream-react": "^1.6.1",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare-pages": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "@remix-run/server-runtime": "^1.3.4",
    "@tailwindcss/typography": "^0.5.2",
    "clsx": "^1.1.1",
    "fast-diff": "^1.2.0",
    "markdown-to-jsx": "^7.1.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remix": "^1.2.3",
    "remix-auth": "^3.2.1",
    "remix-auth-auth0": "^1.3.2",
    "rope": "file:packages/rope",
    "tailwind-override": "^0.6.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@parcel/config-default": "^2.4.1",
    "@parcel/core": "^2.4.1",
    "@parcel/css": "^1.7.4",
    "@parcel/css-cli": "^1.7.4",
    "@parcel/transformer-postcss": "^2.4.1",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "durable-objects": "file:durable_objects",
    "eslint": "^8.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.6",
    "postcss-parcel-css": "^0.5.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "react-textarea-autosize": "^8.3.3",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.2",
    "vitest": "^0.8.4",
    "wrangler": "^0.0.23"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "workspaces": [
    "./durable_objects",
    "./packages/rope"
  ],
  "scripts": {
    "postinstall": "remix setup cloudflare",
    "build": "cross-env NODE_ENV=production run-s build:css build:packages build:durable build:remix",
    "build:durable": "pnpm build --filter durable-objects",
    "build:packages": "pnpm build --filter rope",
    "build:css": "tailwindcss -o ./app/tailwind.css --minify",
    "build:remix": "NODE_ENV=production remix build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:tailwind": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --mount api=./durable_objects --do ARTICLE_DO=Article@api --do SETTINGS_DO=Settings@api $(cat .env)",
    "dev": "cross-env NODE_ENV=development remix build && tailwindcss -o ./app/tailwind.css && run-p dev:*",
    "test": "vitest"
  }
}
